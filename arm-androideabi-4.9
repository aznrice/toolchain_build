#!/bin/bash

#Make a clean build
if [ -e Makefile ];
then
    make -j10 distclean
fi;

#Make a clean install always
if [ -d /tmp/arm-linux-androideabi ]
then
    rm -rf /tmp/arm-linux-androideabi
fi;

#Build Configuration
./configure --prefix=/tmp/arm-linux-androideabi --target=arm-linux-androideabi --host=x86_64-linux-gnu --build=x86_64-linux-gnu --program-transform-name='s&^&arm-linux-androideabi-&' --with-gcc-version=Boosted --with-binutils-version=2.23 --enable-plugins --with-gmp-version=5.1.3 --with-mpfr-version=3.1.2 --with-gdb-version=7.6 --with-mpc-version=1.0.1 --with-cloog-version=0.18.0 --with-isl-version=0.11.1 --with-sysroot=/ --enable-threads=posix --disable-libquadmath --disable-libatomic --disable-libsanitizer --with-host-libstdcxx='-static-libgcc -Wl,-Bstatic,-lstdc++,-Bdynamic -lm' --with-gold-version=2.23 --enable-gold --enable-gold=default

#Build the toolchain
make -j10;

#Install the toolchain
make install;

