# Set GCC VERSION
YYYYMM=`date +%Y.%m`
TEMP="`mktemp -d /tmp/boosted-4.9-XXXXX`"

#Change GCC Branch if needed
cd ../gcc/gcc-Boosted
git reset --hard
git checkout github/linaro-4.9-branch
cd ../../build

#Make a clean build
if [ -e Makefile ];
then
    make -j$CPUS distclean
fi;

#Make a clean install always
if [ -d "$TEMP"/arm-linux-androideabi-4.9 ]
then
    rm -rf "$TEMP"/arm-linux-androideabi-4.9
fi;


#Build Configuration
./configure --prefix="$TEMP"/arm-linux-androideabi-4.9 --target=arm-linux-androideabi --host=x86_64-linux-gnu --build=x86_64-linux-gnu --program-transform-name='s&^&arm-linux-androideabi-&' --with-gcc-version=Boosted --with-binutils-version=current --enable-plugins --with-gmp-version=current --with-mpfr-version=current --with-gdb-version=current --with-mpc-version=current --enable-cloog-backend=isl --with-cloog-version=current --with-ppl-version=1.1 --enable-graphite=yes --with-sysroot=/ --disable-libquadmath --disable-libatomic --disable-libsanitizer --with-gold-version=current --enable-gold=yes --enable-gold=default

#Build the toolchain
make -j$CPUS;

#Install the toolchain
make install;

#Make a clean build
if [ -e Makefile ];
then
    make -j$CPUS distclean
fi;

#Make a clean install always
if [ -d "$TEMP"/arm-eabi-4.9 ]
then
    rm -rf "$TEMP"/arm-eabi-4.9
fi;

#Build Configuration
./configure --prefix="$TEMP"/arm-eabi-4.9 --target=arm-eabi --host=x86_64-linux-gnu --build=x86_64-linux-gnu --program-transform-name='s&^&arm-eabi-&' --with-gcc-version=Boosted --with-binutils-version=current --enable-plugins --with-gmp-version=current --with-mpfr-version=current --with-gdb-version=current --with-mpc-version=current --enable-cloog-backend=isl --with-cloog-version=current --with-ppl-version=1.1 --enable-graphite=yes --with-sysroot=/ --disable-libquadmath --disable-libatomic --disable-libsanitizer --with-gold-version=current --enable-gold=yes --enable-gold=default

#Build the toolchain
make -j$CPUS;

#Install the toolchain
make install;

#Compressing toolchains
XZ_OPT=-9 tar cJf boosted-4.9-$(date +%Y.%m.%d).tar.xz $TEMP
