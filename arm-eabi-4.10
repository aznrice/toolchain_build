#!/bin/bash

# Set number of cores here
export J=-j24;

#Make a clean build
if [ -e Makefile ];
then
    make $J distclean
fi;

#Make a clean install always
if [ -d /tmp/arm-eabi-4.10 ]
then
    rm -rf /tmp/arm-eabi-4.10
fi;

#Build Configuration
./configure --prefix=/tmp/arm-eabi-4.10 --target=arm-eabi --host=x86_64-linux-gnu --build=x86_64-linux-gnu --program-transform-name='s&^&arm-eabi-&' --with-gcc-version=Boosted --with-binutils-version=current --with-gmp-version=current --with-mpfr-version=current --with-mpc-version=current --with-gdb-version=current --with-sysroot=/opt/android-ndk/platforms/android-19/arch-arm --with-cloog-version=current

#Build the toolchain
make $J;

#Install the toolchain
make install;

