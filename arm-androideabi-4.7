# Set number of cores here
export J=-j24;

#Make a clean build
if [ -e Makefile ];
then
    make $J distclean
fi;

#Make a clean install always
if [ -d /tmp/arm-linux-androideabi-4.7 ]
then
    rm -rf /tmp/arm-linux-androideabi-4.7
fi;

#Build Configuration
./configure --prefix=/tmp/arm-linux-androideabi-4.7 --target=arm-linux-androideabi --host=x86_64-linux-gnu --build=x86_64-linux-gnu --program-transform-name='s&^&arm-linux-androideabi-&' --with-gcc-version=Boosted --with-binutils-version=linaro --enable-plugins --with-gmp-version=current --with-mpfr-version=current --with-gdb-version=current --with-mpc-version=current --enable-cloog-backend=isl --with-cloog-version=current --with-ppl-version=1.1 --enable-graphite=yes --with-sysroot=/ --disable-libquadmath --disable-libatomic --disable-libsanitizer --with-gold-version=linaro --enable-gold=yes --enable-gold=default --with-python=/usr/bin/python2.7

#Build the toolchain
make $J;

#Install the toolchain
make install;

#Stripping unneeded residues
strip --discard-locals -v /tmp/arm-linux-androideabi-4.7/arm-linux-android/bin/ld
strip --discard-locals -v /tmp/arm-linux-androideabi-4.7/arm-linux-android/bin/ld.gold
strip --discard-locals -v /tmp/arm-linux-androideabi-4.7/arm-linux-androideabi/bin/ld.gold
strip --discard-locals -v /tmp/arm-linux-androideabi-4.7/arm-linux-androideabi/bin/ld
strip --discard-locals -v /tmp/arm-linux-androideabi-4.7/libexec/gcc/*/*/cc1plus
strip --discard-locals -v /tmp/arm-linux-androideabi-4.7/libexec/gcc/*/*/cc1
strip --discard-locals -v /tmp/arm-linux-androideabi-4.7/libexec/gcc/*/*/lto1
strip --discard-locals -v /tmp/arm-linux-androideabi-4.7/bin/arm-linux-androideabi-ld.gold
strip --discard-locals -v /tmp/arm-linux-androideabi-4.7/bin/arm-linux-androideabi-wdp
strip --discard-locals -v /tmp/arm-linux-androideabi-4.7/bin/arm-linux-androideabi-dwp
strip --discard-locals -v /tmp/arm-linux-androideabi-4.7/bin/arm-linux-androideabi-ld
